# ============================================
# Настройки базы данных
# ============================================
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/beautips_db

# ============================================
# Настройки JWT аутентификации
# ============================================
SECRET_KEY=your-secret-key-here-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Настройки SMTP для отправки email
# ============================================

# SMTP сервер (Gmail, Яндекс, Mail.ru и т.д.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# Учетные данные для SMTP
# ВАЖНО: Для Gmail используйте App Password, а не обычный пароль!
# Создайте App Password: https://myaccount.google.com/apppasswords
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here

# Отправитель писем
FROM_EMAIL=your-email@gmail.com
FROM_NAME=BeauTips

# Базовый URL приложения (для ссылок в письмах)
BASE_URL=http://localhost:8000

